{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/logs/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/metrics/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/alerts/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/health",
      "dest": "/api/main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/docs",
      "dest": "/api/main.py"
    },
    {
      "src": "/redoc",
      "dest": "/api/main.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
